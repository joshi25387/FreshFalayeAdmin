@page "/masters/accounts"
@rendermode InteractiveServer
@layout MainLayout

@using FreshFalaye.Admin.Models
@using FreshFalaye.Admin.Services

@inject AccountApiService AccountApi
@inject DialogService DialogService
@inject IJSRuntime JS
@inject AdminAuthService Auth

<div tabindex="0"
     style="outline:none;height:100%"
     @ref="gridContainer"
     @onkeydown="HandleGridKeys"
     @onkeydown:preventDefault="true">

    <RadzenCard>

        <div class="d-flex mb-1">
            <b class="me-auto">Account Master</b>

            <RadzenButton Text="Add (Alt+A)"
                          Icon="add"
                          ButtonType="ButtonType.Button"
                          AccessKey="A"
                          Size="ButtonSize.Small"
                          Click="@AddAccount" />
        </div>

        <RadzenDataGrid Data="@accounts"
                        TItem="AccountDto"
                        @ref="grid"
                        AllowPaging="true"
                        PageSize="15"
                        AllowRowSelectOnRowClick="true"
                        SelectionMode="DataGridSelectionMode.Single"
                        Value="@selectedAccounts"
                        ValueChanged="@OnSelectedPartiesChanged"
                        RowDoubleClick="@OnRowDoubleClick"
                        RowClick="@OnRowClick"
                        Style="height:70vh">

            <Columns>
                <RadzenDataGridColumn Property="AccountCode"
                                      Title="Account Code"
                                      Width="90px"
                                      TextAlign="TextAlign.Center" />

                <RadzenDataGridColumn Property="AccountName"
                                      Title="Account Name"
                                      TextAlign="TextAlign.Left" />
                <RadzenDataGridColumn Property="AccountGroupName"
                                      Title="Account Group"
                                      TextAlign="TextAlign.Left" />

                <RadzenDataGridColumn Property="MobileNo"
                                      Title="Mobile"
                                      Width="120px"
                                      TextAlign="TextAlign.Center" />

                <RadzenDataGridColumn Property="GstNo"
                                      Title="GST No"
                                      Width="140px"
                                      TextAlign="TextAlign.Center" />
            </Columns>

        </RadzenDataGrid>

    </RadzenCard>
</div>

@code {

    List<AccountDto> accounts = new();

    ElementReference gridContainer;
    RadzenDataGrid<AccountDto> grid;

    IList<AccountDto> selectedAccounts = new List<AccountDto>();
    AccountDto? SelectedAccount => selectedAccounts.FirstOrDefault();

    int selectedIndex = -1;

    bool dataLoaded;

    protected override async Task OnInitializedAsync()
    {
        Auth.OnChange += HandleAuthChanged;        
    }
    void HandleAuthChanged()
    {
        _ = InvokeAsync(async () =>
        {
            if (!dataLoaded &&
                Auth.IsInitialized &&
                Auth.CurrentUser != null)
            {
                await LoadAndInitializeAsync();
            }
        });
    }
    async Task LoadAndInitializeAsync()
    {
        dataLoaded = true;

        await LoadAccounts();

        InitializeSelection();

        await InvokeAsync(StateHasChanged);
        await JS.InvokeVoidAsync("safeFocus", gridContainer);
    }
    void InitializeSelection()
    {
        selectedAccounts.Clear();

        if (accounts.Count > 0)
        {
            selectedIndex = 0;
            selectedAccounts.Clear();
            selectedAccounts.Add(accounts[0]);
        }
    }
    public void Dispose()
    {
        Auth.OnChange -= HandleAuthChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender &&
            !dataLoaded &&
            Auth.IsInitialized &&
            Auth.CurrentUser != null)
        {
            await LoadAndInitializeAsync();
        }
    }

    async Task LoadAccounts()
    {
        accounts = await AccountApi.GetAccountsAsync();
    }

    void OnSelectedPartiesChanged(IList<AccountDto> selected)
    {
        selectedAccounts = selected;

        var view = grid.View.Cast<AccountDto>().ToList();
        var party = SelectedAccount;

        if (party != null)
            selectedIndex = view.IndexOf(party);
    }

    async Task OnRowDoubleClick(DataGridRowMouseEventArgs<AccountDto> args)
    {
        await EditParty(args.Data);
    }

    async Task OnRowClick(DataGridRowMouseEventArgs<AccountDto> args)
    {
        await JS.InvokeVoidAsync("safeFocus", gridContainer);
    }

    async Task AddAccount()
    {
        await DialogService.OpenAsync<AccountDialog>(
            "Add Account",
            null,
            new DialogOptions
            {
                Width = "720px",
                CloseDialogOnEsc = true,
                Draggable = true,
                Resizable = false
            });

        await LoadAccounts();
    }

    async Task EditParty(AccountDto party)
    {
        await DialogService.OpenAsync<AccountDialog>(
            "Edit Account",
            new Dictionary<string, object> { { "AccountId", party.Id } },
            new DialogOptions
            {
                Width = "720px",
                CloseDialogOnEsc = true,
                Draggable = true,
                Resizable = false
            });

        await LoadAccounts();
    }

    async Task HandleGridKeys(KeyboardEventArgs e)
    {
        var view = grid.View.Cast<AccountDto>().ToList();
        if (view.Count == 0)
            return;

        switch (e.Key)
        {
            case "ArrowDown":
                selectedIndex++;
                if (selectedIndex >= view.Count)
                    selectedIndex = 0;

                SelectRowByIndex();
                break;

            case "ArrowUp":
                selectedIndex--;
                if (selectedIndex < 0)
                    selectedIndex = view.Count - 1;

                SelectRowByIndex();
                break;

            case "Enter":
                if (SelectedAccount != null)
                    await EditParty(SelectedAccount);
                break;
        }
    }

    void SelectRowByIndex()
    {
        var view = grid.View.Cast<AccountDto>().ToList();
        if (view.Count == 0)
            return;

        if (selectedIndex < 0)
            selectedIndex = 0;

        if (selectedIndex >= view.Count)
            selectedIndex = view.Count - 1;

        selectedAccounts.Clear();
        selectedAccounts.Add(view[selectedIndex]);
    }
}
